<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_5"
    android:layout_marginRight="@dimen/margin_5"
    android:layout_marginTop="@dimen/layout_10"
    app:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="@dimen/layout_10">


    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical">

        <com.songskids.wiget.SelectableRoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgCover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app:sriv_left_bottom_corner_radius="0dip"
            app:sriv_left_top_corner_radius="@dimen/layout_10"
            app:sriv_oval="false"
            app:sriv_right_bottom_corner_radius="0dip"
            app:sriv_right_top_corner_radius="@dimen/layout_10" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/textview_title_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_10"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/gray" />
    </LinearLayout>
</android.support.v7.widget.CardView>
